@model Domain.DomainModels.Order

<div class="container">
    <h2>Tickets in order with id @Model.Id</h2>
    <div>
        <a class="btn btn-success">Order for @Model.User.Email</a>
    </div>
    @for (int i = 0; i < Model.TicketsInOrder.Count(); i++)
    {
        var item = Model.TicketsInOrder.ElementAt(i).Ticket;

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 50%" alt="Movie Image!" />
                <div class="card-body">
                    <h3 class="card-title">@item.MovieName @item.MovieYear</h3>
                    <p class="card-text">@item.MovieGenre.ToString()</p>
                    <p class="card-text">Start Date: @item.StartDate.ToString()</p>
                    <p class="card-text">End Date: @item.EndDate.ToString()</p>
                    <h5>Ticket Price: @item.TicketPrice.ToString()</h5>
                </div>
            </div>
        </div>
        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>